# LLM Configuration
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
LLM_PROVIDER=openai
LLM_DEFAULT_MODEL=gpt-4
LLM_TIMEOUT_MS=30000
LLM_MAX_RETRIES=3

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clearside
DB_USER=postgres
DB_PASSWORD=your_secure_password

# For cloud (example with Supabase/Neon)
# DATABASE_URL=postgresql://user:password@host:5432/clearside?sslmode=require

# Server Configuration
PORT=3001
NODE_ENV=development

# Logging Configuration
# Log levels: fatal, error, warn, info, debug, trace
# Development: use 'debug' for detailed logs
# Production: use 'info' or 'warn'
LOG_LEVEL=info

# Error Tracking (Sentry)
# Optional: Enable in production for error monitoring
# Get your DSN from https://sentry.io/
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_SAMPLE_RATE=0.1
